@{
}

@model List<BookStoreAdminApplication.Models.Order>

<div class="container">
    <div class="row  d-flex justify-content-end" style="margin-right: 15px;">
        <a asp-controller="Order" asp-action="ExportAllOrders" class="btn btn-success" style="width: 140px">Export Orders</a>
    </div>

    <div class="row m-3">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        #
                    </th>
                    <th>
                        Customer details
                    </th>
                    <th>
                        Number of books
                    </th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count(); i++)
                {
                    var item = Model[i];
                    <tr>
                        <td>@(i + 1)</td>
                        <td>
                            @item.User.UserName
                        </td>

                        <td>
                            @item.BooksInOrder.Count()
                        </td>
                        <td>
                            |
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">View Order</a>
                        </td>
                        <td>
                            |
                            <a asp-action="CreateInvoice" asp-route-id="@item.Id" class="btn btn-info">Create Invoice</a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>

<style>
    h2 {
        font-family: 'Arial', sans-serif;
        color: #343a40;
    }

    .table thead {
        background-color: #343a40;
        color: #fff;
    }

    .table tbody tr {
        transition: all 0.2s;
    }

    .table tbody tr:hover {
        background-color: #f1f1f1;
    }

</style>