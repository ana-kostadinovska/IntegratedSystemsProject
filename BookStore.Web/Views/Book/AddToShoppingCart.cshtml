@{
}

@model BookStore.Domain.Models.BookInShoppingCart

<h1>Add product to Shopping cart</h1>

<div class="row">
    <div class="col-4">

        <form asp-action="AddToShoppingCartConfirmed">
            <input type="hidden" asp-for="BookId" />

            <div class="form-group">
                <label asp-for="Quantity"></label>
                <input asp-for="Quantity" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Add To Shopping Cart" class="btn-info" />
            </div>
        </form>
    </div>
</div>